/* pages/home-music/index.wxss */

page {
  padding: 0 20rpx;
}

/* 覆盖第三方组件样式 */
.van-search {
  padding: 10px 0 !important;
}

.van-search__content {
  background-color: #fff;
}

/* 轮播图样式 */
.swiper {
  border-radius: 10rpx;
  /* 轮播图有一个固定的高度150 */
  overflow: hidden;
  transform: translateY(0);
}

.swiper-item {
  display: flex;
}

.swiper-item .swiper-image {
  width: 100%;
}
